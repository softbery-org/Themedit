<Window
    x:Class="Themedit.ListWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Themedit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ListWindow"
    Width="255"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <ListView
            x:Name="PlayList"
            Width="165"
            Height="414"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn />
                </GridView>
            </ListView.View>
        </ListView>
        <Button
            x:Name="BtnAddMedia"
            Margin="180,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Add Media" />
        <Button
            x:Name="BtnRemMedia"
            Margin="180,42,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Rem Media" />
        <Button
            x:Name="BtnClrList"
            Width="69"
            Margin="180,74,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Clr List" />

    </Grid>
</Window>
